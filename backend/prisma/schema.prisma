generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt()
}

enum Role {
  ADMIN
  MEMBER
}

model Book {
  id            Int       @id @default(autoincrement())
  title         String    @unique
  description   String
  author        String
  publishedYear Int
  quantity      Int
}

